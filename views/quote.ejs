<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Quote</h2>
      <a href="/quote/add" class="btn btn-primary mb-2">Tambah Data Quote</a>
      <% if (msg.length !==0) { %>
      <div class="alert alert-success" role="alert">
        <%= msg %>
      </div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Quote</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (quotes.length ===0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">Daftar quote masing kosong. </div>
            </td>
          </tr>
          <% }else{ %>
          <% quotes.forEach((quote,i) => { %>
          <tr>
            <th scope="row"><%= i+1 %> </th>
            <td><%= quote.name %> </td>
            <td><%= quote.quote %> </td>
            <td>
              <a href="/quote/<%= quote.name %> " class="btn btn-success badge rounded-pill bg-success"><i
                  class="bi bi-info-circle"></i>
                Detail</a>
            </td>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>